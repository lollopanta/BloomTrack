# BloomTrack Environment Configuration

# NASA API Configuration
NASA_API_KEY=your_nasa_api_key_here
NASA_EARTH_DATA_URL=https://earthengine.googleapis.com/v1alpha
NASA_LAADS_DAAC_URL=https://ladsweb.modaps.eosdis.nasa.gov/api/v2
NASA_GIBS_URL=https://gibs.earthdata.nasa.gov/wmts/1.0.0/WMTSCapabilities.xml

# Database Configuration
DATABASE_URL=sqlite:///./bloomtrack.db
DB_HOST=localhost
DB_PORT=5432
DB_NAME=bloomtrack
DB_USER=username
DB_PASSWORD=password

# Redis Configuration (Optional)
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0

# Application Configuration
DEBUG=True
LOG_LEVEL=info
SECRET_KEY=your_secret_key_here_change_in_production
API_V1_STR=/api
PROJECT_NAME=BloomTrack
VERSION=1.0.0

# CORS Configuration
ALLOWED_ORIGINS=["http://localhost:3000", "http://localhost:8000"]

# Data Processing Configuration
MAX_WORKERS=4
CACHE_TTL=3600
BATCH_SIZE=100
DATA_REFRESH_INTERVAL=3600

# NASA Data Sources
LANDSAT_COLLECTION=LANDSAT/LC08/C02/T1_L2
MODIS_COLLECTION=MOD09GA
VIIRS_COLLECTION=NOAA/VIIRS/001/VNP09GA
SENTINEL_COLLECTION=COPERNICUS/S2_SR

# Geospatial Configuration
DEFAULT_MAP_CENTER_LAT=20.0
DEFAULT_MAP_CENTER_LON=0.0
DEFAULT_ZOOM_LEVEL=2
SPATIAL_RESOLUTION=30

# Machine Learning Configuration
ML_MODEL_PATH=./models
TRAINING_DATA_PATH=./data/training
PREDICTION_CONFIDENCE_THRESHOLD=0.7

# Export Configuration
EXPORT_FORMATS=["geojson", "csv", "kml", "shp"]
MAX_EXPORT_RECORDS=10000
