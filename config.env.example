# BloomTrack Environment Configuration
# Copy this file to .env and update with your actual values

# NASA API Configuration
NASA_API_KEY=your_nasa_api_key_here
NASA_BASE_URL=https://earthengine.googleapis.com/v1alpha

# Database Configuration (Optional - for production)
DATABASE_URL=postgresql://username:password@localhost:5432/bloomtrack
DB_HOST=localhost
DB_PORT=5432
DB_NAME=bloomtrack
DB_USER=username
DB_PASSWORD=password

# Redis Configuration (Optional - for caching)
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0

# Application Configuration
DEBUG=True
LOG_LEVEL=info
SECRET_KEY=your_secret_key_here

# API Configuration
API_V1_STR=/api
PROJECT_NAME=BloomTrack
VERSION=1.0.0

# CORS Configuration
ALLOWED_ORIGINS=["http://localhost:3000", "http://localhost:8000"]

# Data Processing Configuration
MAX_WORKERS=4
CACHE_TTL=3600
BATCH_SIZE=100

# Visualization Configuration
DEFAULT_MAP_CENTER_LAT=20.0
DEFAULT_MAP_CENTER_LON=0.0
DEFAULT_ZOOM_LEVEL=2
